<div class="col-lg-10">
  <p> <%= notice %> </p>
  <h1>List of all students</h1>
  <%= link_to 'New Student', new_student_path, class: "btn btn-primary" %><br>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan='3'>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
      <tr>
        <td><%= student.student_with_email %></td>
        <td><%= link_to 'Show', student_path(student) %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Delete', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
