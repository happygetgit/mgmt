<%= form_with model: student do |form| %>
  <% if @student.errors.any? %>
    <% @student.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
  <% end %>
  <div>
    <%= form.label :first_name %><br>
    <%= form.text_field :first_name %>
  </div>
  <div>
    <%= form.label :lastname %><br>
    <%= form.text_field :lastname %>
  </div>
  <div>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </div>
  <div>
    <%= form.label :phonenumber %><br>
    <%= form.text_field :phonenumber %>
  </div>
  <div>
    <%= form.label :date_of_birth %><br>
    <%= form.date_field :dob %>
  </div>
  <div>
    <%= form.label :permanent_contact_number %><br>
    <%= form.text_field :permanent_contact_number %>
  </div>
  <div>
    <%= form.label :alternate_contact_number %><br>
    <%= form.text_field :alternate_contact_number %>
  </div>
  <div>
    <%= form.label :local_address %><br>
    <%= form.text_field :local_address %>
  </div>
  <div>
    <%= form.label :permanent_address %><br>
    <%= form.text_field :permanent_address %>
  </div>

  <%= form.submit %>
  <%= link_to "Back", students_path %>
<% end %>

